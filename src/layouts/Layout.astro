---
interface Props {
  title: string;
}

const { title } = Astro.props;
const siteName = "Brigade Taekwondo Club";
const description = "Brigade Taekwondo Club - Formando juara dalam kehidupan melalui Taekwondo.";
const phoneNumber = "tel: 081632759435";
const imageUrl = "https://taeguk.vercel.app/images/shared.jpg"; 
---

<!doctype html>
<html lang="id" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Metadata bÃ¡sica -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="telephone" content={phoneNumber} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageUrl} />
    <meta property="og:image:alt" content="Brigade Taekwondo Club" />
    <meta property="og:locale" content="es_CL" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={Astro.url} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageUrl} />
    <meta name="twitter:image:alt" content="Brigade Taekwondo Club a" />
    
    <!-- WhatsApp preview -->
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Otros recursos -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link href="https://fonts.googleapis.com/css2?family=Black+Han+Sans&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
    <script>
      import AOS from 'aos';
      AOS.init({
        duration: 800,
        once: true,
      });
    </script>
  </body>
</html>

<style is:global>
  :root {
    --accent: 220, 38, 38;
    --accent-light: 248, 113, 113;
    --accent-dark: 153, 27, 27;
  }
  html {
    font-family: system-ui, sans-serif;
    background: #ffffff;
  }
  
  .text-gradient {
    background: linear-gradient(315deg, rgb(var(--accent)) 25%, rgb(var(--accent-light)));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .korean-title {
    font-family: 'Black Han Sans', sans-serif;
  }

  .belt-border {
    position: relative;
  }

  .belt-border::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 4px;
    background: linear-gradient(90deg, #fff 0%, #FFD700 35%, #FFD700 65%, #fff 100%);
  }

  .dobok-pattern {
    background-image: radial-gradient(circle, #f8fafc 30%, transparent 31%), 
                      radial-gradient(circle, transparent 35%, #f8fafc 36%);
    background-size: 80px 80px;
    background-position: center;
  }
</style>